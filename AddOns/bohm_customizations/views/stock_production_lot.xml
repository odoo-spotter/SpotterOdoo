<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="stock_production_lot_form_customization" model="ir.ui.view">
        <field name="name">stock.production.lot.form.customization</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="x_warranty_date" />
            </xpath>
            <xpath expr="//page[@name='description']" position="after">
                <page string="Attached Subscriptions">
                    <field name="x_linked_subscriptions" widget="many2many" readonly="1">
                        <tree>
                            <field name="display_name" string="Subscription Name"/>
                            <field name="partner_id" />
                            <field name="date_start" string="Warranty Start"/>
                            <field name="date" string="Warranty Expiration"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>